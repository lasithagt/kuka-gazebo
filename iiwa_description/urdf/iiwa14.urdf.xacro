<?xml version="1.0"?>

<robot name="iiwa14" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:arg name="hardware_interface" default="PositionJointInterface"/>
  <xacro:arg name="robot_name" default="iiwa"/>
  <xacro:arg name="origin_xyz" default="0 0 0"/>
  <xacro:arg name="origin_rpy" default="0 0 0"/>
  <!-- Import Rviz colors -->
  <xacro:include filename="$(find iiwa_description)/urdf/iiwa.gazebo.xacro" />
  <xacro:include filename="$(find iiwa_description)/urdf/materials.xacro" />
  <xacro:include filename="$(find iiwa_description)/urdf/iiwa.transmission.xacro" />
  <!--Import the lbr iiwa macro -->
  <xacro:include filename="$(find iiwa_description)/urdf/iiwa14.xacro"/>
  
  <!-- Fix to world just for testing -->
  
  <link name="world" />
  
  <joint
    name="fixed"
    type="fixed">
    <parent
      link="world" />
    <child
      link="frame" />
    <axis xyz="0 0 1"/>
  </joint>


  <link
    name="frame">
    <inertial>
      <origin
        xyz="1.5 0.25 1.25"
        rpy="0 0 0" />
      <mass
        value="2697" />
      <inertia
        ixx="0"
        ixy="0"
        ixz="0"
        iyy="0"
        iyz="0"
        izz="0" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://iiwa_description/meshes/iiwa14/visual/base_link.STL"/>
      </geometry>
      <material
        name="">
        <color
          rgba="0.64706 0.61961 0.58824 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://iiwa_description/meshes/iiwa14/collision/base_link.STL" />
      </geometry>
    </collision>
  </link>
  <!--iiwa-->
  <xacro:iiwa14 hardware_interface="$(arg hardware_interface)" robot_name="$(arg robot_name)" parent="world">
    <origin xyz="$(arg origin_xyz)" rpy="$(arg origin_rpy)" />
  </xacro:iiwa14>


  <xacro:iiwa_gazebo robot_name="$(arg robot_name)"/>
  <xacro:iiwa_transmission hardware_interface="$(arg hardware_interface)" robot_name="$(arg robot_name)"/>


</robot>
